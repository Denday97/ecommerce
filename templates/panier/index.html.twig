{% extends 'base.html.twig' %}

{% block title %}Votre panier
{% endblock %}

{% block body %}
	<section class="bg-light p -3">
		<h1>Les produits</h1>
	</section>
    <br>

	<table class="table">
		<thead>
			<tr>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantité</th>
				<th>Total</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for element in dataPanier %}
				<tr>
					<td>{{ element.produit.name }}</td>
					<td class="text-end">{{ element.produit.price }}
						€</td>
					<td>{{ element.quantite }}</td>
					<td class="text-end">{{ element.quantite * element.produit.price }}
						€</td>
					<td>
						<a href="{{path("panier_add", {id: element.produit.id})}}" class="btn btn-success">
							<i class="bi bi-cart-plus-fill"></i>
						</a>
						<a href="{{path("panier_remove", {id: element.produit.id})}}" class="btn btn-warning">
							<i class="bi bi-cart-dash"></i>
						</a>
						<a href="{{path("panier_delete", {id: element.produit.id})}}" class="btn btn-danger">
							<i class="bi bi-cart-x"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="text-center">Votre panier est vide</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3">Total</td>
				<td class="text-end">{{ total }}
					€</td>
				<td>
					<a href="{{path("panier_delete_all")}}" class="btn btn-danger">
						<i class="bi bi-cart-x"></i>
					</a>
				</td>
			</tr>
			

					
				
		</tfoot>
	</table>

	<form action="/" method="post">
		<div class="text-center">
			
			<button class="btn btn-primary text-center" colspan="12" type="submit">Proceder au paiment</button> 
		</div>
	</form>
    


{% endblock %}
